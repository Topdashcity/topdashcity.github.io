---
const {
  title = 'Lorem Ipsum',
  content = 'Lorem ipsum dolor sit amet quiopisces.',
  image = '/logo-dash-alt.png',
  hasCTA = true,
  action = '/',
  actionName = 'Ver m√°s',
  ctaDirection = 'left', // left, right, full
  hasContentRight = false,
} = Astro.props

const buttonDirection = {
  'rounded-l-lg': (ctaDirection === 'left'), 
  'rounded-r-lg': (ctaDirection === 'right'), 
  'rounded-lg': (ctaDirection === 'full')
}
---

<div class="custom-container">
  <div class:list={['mx-4 sm:w-1/2', {'order-last sm:order-last': hasContentRight}]}>
    <h2>{title}</h2>
    <p>{content}</p>
    { hasCTA && (<a class:list={['button', buttonDirection]} href={action}>{actionName}</a>) }
  </div>
  <div class="order-first sm:order-last sm:w-1/2">
    <img class="mx-auto w-9/12 sm:m-0 sm:w-full" src={image} />
  </div>
</div>
