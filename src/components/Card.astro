---
const { 
	tag = 'Tag', 
	name = 'Commerce', 
	address = 'This is the address',
	image = 'https://via.placeholder.com/192x192.png?text=Logo+Not+Available',
	cta = '/directorio'
} = Astro.props
---

<div class="w-[20rem] h-[40rem] m-8 p-8 bg-slate drop-shadow-lg text-center">
	<div class="flex flex-col justify-between h-full">
		<div>
			<img class="mx-auto mb-8 w-48" src={ image } alt="Logo">
			<div class="uppercase font-bold tracking-widest rounded-full bg-accent text-white h-12 py-3">
				{ tag }
			</div>
			<p class="font-bold tracking-widest">{ name }</p>
			<p class="text-sm">{ address }</p>
		</div>
		<div>
			<a class="button rounded-lg" href={cta}>
				Ver m√°s
			</a>
		</div>
	</div>
</div>
